<!--oa首页-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f4f4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f4f4"
        android:orientation="vertical"

        >

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#D75758" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#D75758">

            <TextView
                android:id="@+id/tv_biaoji"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:paddingRight="14dp"
                android:text="全部标记已读"
                android:textColor="#ffffff"
                android:textSize="13dp" />

            <TextView
                style="@style/shouye_title_text"
                android:layout_gravity="center"
                android:text="消息中心" />

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingLeft="14dp"
                android:paddingRight="44dp"
                android:src="@mipmap/back" />

        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d75758"
        android:paddingTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_weidu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="未读消息"
            android:gravity="center"
            android:textColor="#f5c5c5"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_yidu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="已读消息"
            android:gravity="center"
            android:textColor="#f5c5c5"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_quanbu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="全部消息"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#d75758"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/ll_line1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ffffff"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/ll_line2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ffffff"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30dp"
            android:visibility="invisible"
            android:orientation="horizontal"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/ll_line3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ffffff"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30dp"
            android:visibility="visible"
            android:orientation="horizontal"
            android:layout_weight="1"/>
    </LinearLayout>

    <com.example.litianci.guangming.pullswipe.PullToRefreshSwipeMenuListView
        android:id="@+id/gwgl_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f4f4"
        android:divider="#f5f4f4"
        android:dividerHeight="9dp"></com.example.litianci.guangming.pullswipe.PullToRefreshSwipeMenuListView>
</LinearLayout>