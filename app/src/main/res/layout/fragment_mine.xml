<!--oa首页-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f4f4"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f5f4f4"
            android:orientation="vertical"

            >

            <View
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="#D75758" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#D75758">

                <TextView
                    style="@style/shouye_title_text"
                    android:layout_gravity="center"
                    android:text="我的" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="111dp"
                android:layout_marginTop="9dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <com.example.litianci.guangming.views.CircularImage
                    android:id="@+id/iv_tx"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="33dp"
                    android:src="@mipmap/txltx" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="11dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名"
                        android:textColor="#505050"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_dept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="部门"
                        android:textColor="#adadad"
                        android:textSize="10dp" />

                </LinearLayout>
            </LinearLayout>

            <!--分割线                  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/ll_dangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginBottom="9dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="9dp"
                        android:src="@mipmap/wodedangan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/iv"
                        android:text="我的档案"
                        android:textColor="#505050"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/mine_right" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="#f5f4f4"></LinearLayout>

                <RelativeLayout
                    android:id="@+id/ll_caogao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginBottom="9dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="9dp"
                        android:src="@mipmap/caogaozancun" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/iv2"
                        android:text="草稿暂存"
                        android:textColor="#505050"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/mine_right" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="#f5f4f4"
                    android:visibility="gone"></LinearLayout>

                <RelativeLayout
                    android:id="@+id/ll_qingjia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv3"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginBottom="9dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="9dp"
                        android:src="@mipmap/wodeqingjia" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/iv3"
                        android:text="我的请假"
                        android:textColor="#505050"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/mine_right" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="#f5f4f4"></LinearLayout>

                <RelativeLayout
                    android:id="@+id/ll_yongzhang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv4"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginBottom="9dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="9dp"
                        android:src="@mipmap/yongzhangjilu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/iv4"
                        android:text="用章记录"
                        android:textColor="#505050"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/mine_right" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="13dp"
                    android:background="#f5f4f4"></LinearLayout>

                <RelativeLayout
                    android:id="@+id/ll_mima"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv5"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginBottom="9dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="9dp"
                        android:src="@mipmap/xiugaimima" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/iv5"
                        android:text="修改密码"
                        android:textColor="#505050"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/mine_right" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="#f5f4f4"></LinearLayout>

                <RelativeLayout
                    android:id="@+id/ll_touxiang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv6"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginBottom="9dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="9dp"
                        android:src="@mipmap/shangchuantouxiang" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/iv6"
                        android:text="上传头像"
                        android:textColor="#505050"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/mine_right" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="#f5f4f4"></LinearLayout>

                <RelativeLayout
                    android:id="@+id/ll_jiance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv7"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginBottom="9dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="9dp"
                        android:src="@mipmap/banbenjiaance" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/iv7"
                        android:text="版本检测"
                        android:textColor="#505050"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/mine_right" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="#f5f4f4"
                    android:visibility="gone"></LinearLayout>

                <RelativeLayout
                    android:id="@+id/ll_gengxin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv8"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginBottom="9dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="9dp"
                        android:src="@mipmap/banbengengxin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/iv8"
                        android:text="版本更新"
                        android:textColor="#505050"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/mine_right" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="#f5f4f4"
                    android:visibility="gone"></LinearLayout>

                <RelativeLayout
                    android:id="@+id/ll_exit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv9"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginBottom="9dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="9dp"
                        android:src="@mipmap/tuichudenglu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/iv9"
                        android:text="退出登录"
                        android:textColor="#505050"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/mine_right" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:background="#f5f4f4"></LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>